<%= form_for(@user, url: signup_path) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group row">
    <div class="col-6">
    <%= f.label :name, class: 'right' %>
    </div>
    <div class="col-6">
    <%= f.text_field :name, class: 'field mar-l-5' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-6">
    <%= f.label :email, class: 'right' %>
    </div>
    <div class="col-6">
    <%= f.email_field :email, class: 'field mar-l-5' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-6">
    <%= f.label :password, class: 'right' %>
    </div>
    <div class="col-6">
    <%= f.password_field :password, class: 'field mar-l-5' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-6">
    <%= f.label :password_confirmation, "Confirmation", class: 'right'%>
    </div>
    <div class="col-6">
    <%= f.password_field :password_confirmation, class: 'field mar-l-5' %>
    </div>
  </div>
  <div class="pad-10">
    <div class="col-6">
      &nbsp;
    </div>
    <div class="col-6">
      <%= f.submit yield(:button_text), class: "left mar-l-10 btn" %>
    </div>
  </div>
<% end %>
